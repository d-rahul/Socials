<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__composer_black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/btn_fb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Login" />

        <Button
            android:id="@+id/btn_fb_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Dialog Share" />


        <Button
            android:id="@+id/btn_fb_share_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Image Share" />

        <Button
            android:id="@+id/btn_fb_share_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Link Share" />

        <Button
            android:id="@+id/btn_fb_share_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Text Share" />

        <Button
            android:id="@+id/btn_fb_share_vdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook VDO Share" />

        <Button
            android:id="@+id/btn_gp_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google+ Login" />


        <Button
            android:id="@+id/btn_gp_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google+ Share" />


        <Button
            android:id="@+id/btn_twitter_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twitter Login" />

        <Button
            android:id="@+id/btn_twitter_tweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tweet" />


        <Button
            android:id="@+id/btn_twitter_load_tweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Tweet" />


        <Button
            android:id="@+id/btn_fb_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Like Facebook Page" />

        <com.facebook.share.widget.LikeView
            android:id="@+id/like_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>